generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role Role
  appointments Appointment[]
}

model Appointment {
  id Int @id @default(autoincrement())
  date DateTime
  userId Int
  user User @relation(fields: [userId], references: [id])
  timeBlockId Int
  timeBlock TimeBlock @relation(fields: [timeBlockId], references: [id])
}

model TimeBlock {
  id Int @id @default(autoincrement())
  startTime DateTime
  endTime DateTime
  appointments Appointment[]
}